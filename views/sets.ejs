<!DOCTYPE html>
<html>

<head>
  <title>Lego Collection - Sets</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="/css/theme.css" />
</head>

<body>
  <%- include('partials/navbar', { page: '/lego/sets' }) %>

  <br />

  <div class="container">
    <div class="row">
      <main class="col-md-12">

        <section class="bg-light py-5">
          <div class="container">
            <h1 class="display-5 fw-bold mb-4 text-center">Lego Collection</h1>

            <!-- Theme filter buttons -->
            <div class="text-center mb-4">
              <a href="/lego/sets" class="btn btn-outline-secondary mx-1">All</a>
              <a href="/lego/sets?theme=technic" class="btn btn-outline-primary mx-1">Technic</a>
              <a href="/lego/sets?theme=classic" class="btn btn-outline-primary mx-1">Classic Town</a>
              <a href="/lego/sets?theme=space" class="btn btn-outline-primary mx-1">Space</a>
              <!-- Add more themes here if needed -->
            </div>

            <table class="table table-bordered table-hover align-middle">
              <thead class="table-primary text-center">
                <tr>
                  <th>Image</th>
                  <th>Name</th>
                  <th>Theme</th>
                  <th>Year</th>
                  <th>Number of Parts</th>
                  <th>Details</th>
                </tr>
              </thead>
              <tbody>
                <% sets.forEach(set => { %>
                  <tr>
                    <td>
                      <div class="rounded mx-auto" style="width: 8rem; height: 8rem; background-image: url('<%= set.img_url %>'); background-size: cover; background-position: center;"></div>
                    </td>
                    <td><%= set.name %></td>
                    <td class="text-center">
                      <a href="/lego/sets?theme=<%= set.theme %>" class="btn btn-sm btn-outline-primary">
                        <%= set.theme %>
                      </a>
                    </td>
                    <td class="text-center"><%= set.year %></td>
                    <td class="text-center"><%= set.num_parts %></td>
                    <td class="text-center">
                      <a href="/lego/sets/<%= set.set_num %>" class="btn btn-sm btn-primary">Details</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>

          </div>
        </section>

      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>